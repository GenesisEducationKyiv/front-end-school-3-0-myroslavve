{
    "name": "music-app",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "npm --workspaces run build",
        "dev": "concurrently \"npm run dev --workspace=packages/server\" \"npm run dev --workspace=packages/client\"",
        "start": "concurrently \"npm run start --workspace=packages/server\" \"npm run start --workspace=packages/client\"",
        "test-e2e": "playwright test",
        "test-e2e-ui": "playwright test --ui"
    },
    "dependencies": {
        "sonner": "^2.0.6"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}
